<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.craig.androidticketsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AppLanding"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TicketTableActivity"
            android:label="@string/title_activity_ticket_table"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SingleTicketActivity"
            android:label="@string/title_activity_single_ticket"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SubmitTicketActivity"
            android:label="@string/title_activity_submit_ticket"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
